{
  "name": "leancoffee-powerup",
  "version": "0.7.0",
  "description": "Everything you need to conduct a lean coffee session in Trello!",
  "private": true,
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "start": "npx webpack-dev-server --config ./webpack.dev.js",
    "lint": "npx eslint -c .eslintrc ./src",
    "dist": "export NODE_ENV=production && webpack --config webpack.prod.js",
    "version": "npm run dist && git add -A docs"
  },
  "engines": {
    "node": "^12.13.1",
    "npm": "^6.12.1"
  },
  "keywords": [
    "trello",
    "power-up"
  ],
  "author": "Angelo Tata <leanercoffee@tatablack.net>",
  "license": "Apache-2.0",
  "dependencies": {
    "format-duration": "^1.3.1"
  },
  "devDependencies": {
    "@babel/cli": "^7.7.0",
    "@babel/core": "^7.7.2",
    "@babel/plugin-proposal-class-properties": "^7.7.0",
    "@babel/plugin-transform-async-to-generator": "^7.7.0",
    "@babel/preset-env": "^7.7.1",
    "babel-eslint": "^10.0.3",
    "babel-loader": "^8.0.6",
    "clean-webpack-plugin": "^3.0.0",
    "copy-webpack-plugin": "^5.0.5",
    "eslint": "^6.6.0",
    "eslint-config-airbnb-base": "^14.0.0",
    "eslint-plugin-babel": "^5.3.0",
    "eslint-plugin-import": "^2.18.2",
    "html-webpack-plugin": "^3.2.0",
    "husky": "^3.1.0",
    "lint-staged": "^9.4.3",
    "terser-webpack-plugin": "^2.2.1",
    "webpack": "^4.41.2",
    "webpack-cli": "^3.3.10",
    "webpack-dev-server": "^3.9.0",
    "webpack-merge": "^4.2.2"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.js": [
      "eslint --fix",
      "git add"
    ]
  }
}
